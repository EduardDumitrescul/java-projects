<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.minesweeper.GameController">
    <top>
        <BorderPane>
            <left>
                <HBox spacing="0">
                    <Text fx:id="minesLabel" text="MINES:"/>
                    <Text fx:id="minesCountLabel"/>
                </HBox>

            </left>
            <right>
                <HBox>
                    <Text fx:id="timeLabel" text="TIME:" />
                    <Text fx:id="timerView"/>
                </HBox>
            </right>
        </BorderPane>
    </top>

    <center>
        <StackPane >
            <GridPane fx:id="grid" style="-fx-background-color:blue">

            </GridPane>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="TOP_RIGHT">
            <Button fx:id="returnButton" text="Return to Main Menu" onAction="#returnToMainMenu" style="-fx-background-color: transparent"/>
        </HBox>
    </bottom>


</BorderPane>

