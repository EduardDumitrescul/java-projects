<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.minesweeper.MenuController"
            prefHeight="400.0" prefWidth="600.0">

    <GridPane style="-fx-background-color:blue" prefHeight="300" prefWidth="200" minWidth="-Infinity" minHeight="-Infinity" maxHeight="-Infinity" maxWidth="-Infinity"
            alignment="CENTER" hgap="16" vgap="16">
        <Label text="MINESWEEPER" GridPane.hgrow="ALWAYS" GridPane.columnSpan="3" GridPane.halignment="CENTER"/>
        <Button text="Easy" fx:id="easyButton" GridPane.rowIndex="2" GridPane.columnIndex = "1" style="-fx-background-color:transparent"/>
        <Button text="Normal" fx:id="normalButton" GridPane.rowIndex="2" GridPane.columnIndex = "2" style="-fx-background-color:transparent"/>
        <Button text="Hard" fx:id="hardButton" GridPane.rowIndex="3" GridPane.columnIndex = "1" style="-fx-background-color:transparent"/>
        <Button text="Extreme" fx:id="extremeButton" GridPane.rowIndex="3" GridPane.columnIndex = "2" style="-fx-background-color:transparent"/>
    </GridPane>

</StackPane>
